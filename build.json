{
    "appId": "com.example.interval-timer",
    "productName": "Interval Timer",
    "files": [
        "main.js",
        "preload.js",
        "package.json",
        "assets/**/*",
        "small.html",
        "large.html"
    ],
    "mac": {
        "target": [
            "dmg",
            "zip"
        ],
        "category": "public.app-category.utilities"
    },
    "win": {
        "target": [
            "nsis",
            "portable"
        ],
        "icon": "assets/tray-icon.ico"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb",
            "rpm"
        ],
        "category": "Utility",
        "icon": "assets/tray-icon.png"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    }
}